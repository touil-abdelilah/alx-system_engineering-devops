#!/usr/bin/env bash
# This script displays numbers from 1 to 20 with special messages for certain iterations using a while loop and a case statement.

# Initialize counter
counter=1

# Loop until counter reaches 20
while [ $counter -le 20 ]; do
    case $counter in
        4)
            echo "$counter: bad luck from China"
            ;;
        9)
            echo "$counter: bad luck from Japan"
            ;;
        17)
            echo "$counter: bad luck from Italy"
            ;;
        *)
            echo "$counter"
            ;;
    esac
    ((counter++))
done
